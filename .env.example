# Application
APP_NAME=child-behavioral-therapist
APP_ENV=development
DEBUG=true
SECRET_KEY=your-secret-key-change-in-production
API_VERSION=v1
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/child_therapist
REDIS_URL=redis://localhost:6379/0

# LLM Configuration
GOOGLE_API_KEY=your-google-api-key-here
LANGSMITH_API_KEY=your-langsmith-key-here
LANGSMITH_PROJECT=child-therapist-dev
LANGSMITH_TRACING=true

# Vector Store
CHROMA_HOST=localhost
CHROMA_PORT=8000
CHROMA_PERSIST_DIRECTORY=./data/chroma

# Security
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# Firebase Authentication
# Download service account key from Firebase Console > Project Settings > Service Accounts
FIREBASE_CREDENTIALS_PATH=firebase-credentials.json
FIREBASE_PROJECT_ID=your-firebase-project-id

# File Storage (Local for development, S3 for production)
STORAGE_TYPE=local
STORAGE_PATH=./data/uploads
# S3_BUCKET=child-therapist-resources
# AWS_ACCESS_KEY_ID=your-aws-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret
# AWS_REGION=us-east-1

# Monitoring
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Celery (Background Tasks)
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
