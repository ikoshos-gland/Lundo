# Docker Environment Configuration
# Copy this to .env and update values before running docker-compose

# ===================
# REQUIRED SETTINGS
# ===================

# Azure OpenAI Configuration (required for AI functionality)
AZURE_OPENAI_API_KEY=your-azure-openai-api-key-here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT=gpt-5.2-chat
AZURE_OPENAI_API_VERSION=2024-12-01-preview

# Google API Key (optional - only needed for embeddings if using Google)
GOOGLE_API_KEY=your-google-api-key-here

# Firebase Project ID (required for authentication)
FIREBASE_PROJECT_ID=your-firebase-project-id

# ===================
# SECURITY (CHANGE IN PRODUCTION!)
# ===================

# Generate secure keys: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=change-me-in-production-use-secure-random-key
JWT_SECRET_KEY=change-me-in-production-use-secure-random-key

# Database credentials
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=child_therapist

# ===================
# APPLICATION
# ===================

APP_ENV=development
DEBUG=true
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Number of API workers (adjust based on CPU cores)
WORKERS=1

# Seed knowledge base on first startup
SEED_DATA=true

# ===================
# OPTIONAL: MONITORING
# ===================

# LangSmith (AI observability)
LANGSMITH_API_KEY=
LANGSMITH_PROJECT=child-therapist
LANGSMITH_TRACING=false

# Sentry (error tracking)
SENTRY_DSN=
